# This file sets up include directories, link directories, and
# compiler settings for a project to compile against PYVINECOPULIB.
# It should not be included directly, but rather through the 
# PYVINECOPULIB_USE_FILE setting obtained from PyVinecopulibConfig.cmake.

if(PYVINECOPULIB_BUILD_SETTINGS_FILE AND NOT SKIP_PYVINECOPULIB_BUILD_SETTINGS_FILE)
  include(${CMAKE_ROOT}/Modules/CMakeImportBuildSettings.cmake)
  CMAKE_IMPORT_BUILD_SETTINGS(${PYVINECOPULIB_BUILD_SETTINGS_FILE})
endif()

# Add compiler flags needed to use PYVINECOPULIB.
set(CMAKE_C_FLAGS "${CMAKE_C_FLAGS} ${PYVINECOPULIB_C_FLAGS}")
set(CMAKE_CXX_FLAGS "${CMAKE_CXX_FLAGS} ${PYVINECOPULIB_CXX_FLAGS}")
set(CMAKE_EXE_LINKER_FLAGS "${CMAKE_EXE_LINKER_FLAGS} ${PYVINECOPULIB_EXE_LINKER_FLAGS}")
set(CMAKE_SHARED_LINKER_FLAGS "${CMAKE_SHARED_LINKER_FLAGS} ${PYVINECOPULIB_SHARED_LINKER_FLAGS}")
set(CMAKE_MODULE_LINKER_FLAGS "${CMAKE_MODULE_LINKER_FLAGS} ${PYVINECOPULIB_MODULE_LINKER_FLAGS}")

include_directories(BEFORE ${PYVINECOPULIB_INCLUDE_DIRS})
link_directories(${PYVINECOPULIB_LIBRARY_DIRS})
